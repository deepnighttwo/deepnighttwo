<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.deepnighttwo.resourceresolverapplication.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.deepnighttwo.resourceresolverapplication.Perspective"
            id="com.deepnighttwo.resourceresolverapplication.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="com.deepnighttwo.resourceresolver.ui.views.ResourceDetailsView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         id="ResourceResolver"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.deepnighttwo.resourceresolver.application.application"
            name="ResourceResolver">
         <property
               name="appName"
               value="ResourceResolver">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.deepnighttwo.resourceresolverapplication.commands.ExitHandler"
            description="Exit"
            id="com.deepnighttwo.resourceresolver.application.exitCommand"
            name="name">
      </command>
   </extension>

</plugin>
